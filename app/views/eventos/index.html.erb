<p id="notice"><%= notice %></p>

<h1>Eventos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data evento</th>
      <th>Data limite inscricao</th>
      <th>Capacidade</th>
      <th>Imagem</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eventos.each do |evento| %>
      <tr>
        <td><%= evento.nome %></td>
        <td><%= evento.data_evento %></td>
        <td><%= evento.data_limite_inscricao %></td>
        <td><%= evento.capacidade %></td>
        <td><%= evento.imagem %></td>
        <td><%= evento.descricao %></td>
        <td><%= link_to 'Show', evento %></td>
        <td><%= link_to 'Edit', edit_evento_path(evento) %></td>
        <td><%= link_to 'Destroy', evento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

